#!/bin/bash
{{ if .install_packages }}
if command -v brew &> /dev/null;  then
brew bundle --no-lock --file=/dev/stdin << EOF
{{ range .packages.brews -}}
brew {{ . | quote }}
{{ end -}}
{{ if eq .chezmoi.os "darwin" -}}
{{ range .packages.darwin.taps -}}
tap {{ . | quote }}
{{ end -}}
{{ range .packages.darwin.brews -}}
brew {{ . | quote }}
{{ end -}}
{{ range .packages.darwin.casks -}}
cask {{ . | quote }}
{{ end -}}
{{ end -}}
EOF
fi
{{ end }}
